@model UpdateProductVM

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                       <img style="width:150px;height:150px" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true)?.ImageUrl"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="MainPhoto">Change main image</label>
                        <input asp-for="MainPhoto" class="form-control">
                        <span asp-validation-for="MainPhoto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <img style="width:150px;height:150px" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==false)?.ImageUrl" />
                    </div>
                    <div class="form-group">
                        <label asp-for="HoverPhoto">Change hover image</label>
                        <input asp-for="HoverPhoto" class="form-control">
                        <span asp-validation-for="HoverPhoto" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex">
                        @foreach (ProductImage item in Model.ProductImages.Where(pi=>pi.IsPrimary==null))
                        {
                            <div class="position-relative">
                                <img style="width:150px;height:150px" src="~/assets/images/website-images/@item.ImageUrl"/>
                                <input asp-for="ImageIds" type="hidden" value="@item.Id">
                                <button style="right:5px;top:5px" type="button" class="cust-delete position-absolute" >X</button>
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="AdditionalPhotos">Change additional image(-s)</label>
                        <input asp-for="AdditionalPhotos" class="form-control">
                        <span asp-validation-for="AdditionalPhotos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SKU"></label>
                        <input asp-for="SKU" class="form-control" placeholder="SKU">
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name))">
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagIds">Tags</label>
                        <select asp-for="TagIds" class="form-control" asp-items="new SelectList(Model.Tags, nameof(Tag.Id), nameof(Tag.Name))">
                        </select>
                        <span asp-validation-for="TagIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColorIds">Colors</label>
                        <select asp-for="ColorIds" class="form-control" asp-items="new SelectList(Model.Colors, nameof(Color.Id), nameof(Color.Name))">
                        </select>
                        <span asp-validation-for="ColorIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SizeIds">Sizes</label>
                        <select asp-for="SizeIds" class="form-control" asp-items="new SelectList(Model.Sizes, nameof(Size.Id), nameof(Size.Name))">
                        </select>
                        <span asp-validation-for="SizeIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullDescription"></label>
                        <input asp-for="FullDescription" class="form-control" placeholder="FullDescription">
                        <span asp-validation-for="FullDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order"></label>
                        <input asp-for="Order" class="form-control" placeholder="Order">
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section DeleteImage{
    <script>
        var btns = document.querySelectorAll(".cust-delete");
    btns.forEach(b => {
        b.addEventListener("click", function () {
            b.parentElement.remove();
        })
    })
</script>
}

