@model PaginationVM<Category>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a asp-controller="category" asp-action="create" class="btn btn-success btn-rounded btn-fw">Create Category</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Products Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Category category in Model.Items)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                @category.Products.Count
                                            </td>
                                            <td>
                                                <a asp-controller="category" asp-action="update" asp-route-id="@category.Id" class="btn btn-warning btn-rounded btn-fw btn-info"><i class="mdi mdi-pencil"></i></a>
                                                <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger btn-rounded btn-fw btn-info"><i class="mdi mdi-delete"></i></a>
                                                <a asp-controller="category" asp-action="detail" asp-route-id="@category.Id" class="btn btn-primary btn-rounded btn-fw"><i class="mdi mdi-open-in-new"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div class="container d-flex justify-content-center pt-2">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item @(Model.CurrentPage<=1 ? "disabled" : "")">
                                            <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage-1)" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @for (int i = 0; i < Model.TotalPage; i++)
                                        {
                                            <li class="page-item @(Model.CurrentPage-1==i ? "disabled" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(i+1)">@(i + 1)</a></li>
                                        }

                                        <li class="page-item @(Model.CurrentPage>=Model.TotalPage ? "disabled" : "")">
                                            <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage+1)" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
